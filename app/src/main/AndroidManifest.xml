<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tema.thermostat" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WeekSchedule"
            android:label="@string/title_activity_week_schedule" >
        </activity>
        <activity
            android:name=".DaySchedule"
            android:label="@string/title_activity_day_schedule" >
        </activity>
        <activity
            android:name=".VacationMode"
            android:label="@string/title_activity_vacation_mode" >
        </activity>
    </application>

</manifest>
